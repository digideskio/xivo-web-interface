location / {
    if ($host !~* "(127\.0\.0\.1|localhost)") {
        rewrite ^(.*) https://$host$1 last;
    }

    index index.php;
    include /etc/nginx/xivo_params;
}

location /service/ipbx/web_services.php/phonebook/menu {
    return http://$host:9498/0.1/directories/menu/autodetect;
}

location /service/ipbx/web_services.php/phonebook/search {
    if ($arg_name) {
        return http://$host:9498/0.1/directories/lookup/autodetect?term=$arg_name;
    }

    return http://$host:9498/0.1/directories/input/autodetect;
}
